// Function: reverseString
// Author: leroykim
// Description:
//   This function takes a string as input, splits it into an array of characters,
//   reverses the array, then joins it back into a string.
//   Finally, it returns the reversed string.

function reverseString(str) {
    // Step 1: Split the string into an array of characters
    let charArray = str.split("");

    // Step 2: Reverse the array of characters
    let reversedArray = charArray.reverse();

    // Step 3: Join the reversed array back into a string
    let reversedString = reversedArray.join("");

    // Step 4: Return the reversed string
    return reversedString;
}

// ==========================
// Test Cases
// ==========================

// Expected output: "olleh"
console.log(reverseString("hello"));

// Expected output: "54321"
console.log(reverseString("12345"));

// Expected output: ""
console.log(reverseString(""));

// Additional custom test
// Expected output: "!dlroW olleH"
console.log(reverseString("Hello World!"));
